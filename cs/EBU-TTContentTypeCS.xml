    <Alias>EBU-TTContentType</Alias>

    <Term termID="1">
        <Name xml:lang="en">audioDescriptionScript</Name>
        <Definition xml:lang="en"> A document containing a script used to produce an audio description sound track.</Definition>
        <FirstVersiondate>2015-09-11</FirstVersiondate>
        <ValidityFlag>1</ValidityFlag>
    </Term>

    <Term termID="2">
        <Name xml:lang="en">dubbingScript</Name>
        <Definition xml:lang="en">A document containing a script used to produce an alternative dialogue sound track.</Definition>
        <FirstVersiondate>2015-09-11</FirstVersiondate>
        <ValidityFlag>1</ValidityFlag>
    </Term>


    <Term termID="3">
        <Name xml:lang="en">translationSubtitles</Name>
        <Definition xml:lang="en">A document used for producing translation subtitles rendered as text.</Definition>
        <FirstVersiondate>2015-09-11</FirstVersiondate>
        <ValidityFlag>1</ValidityFlag>
    </Term>

    <Term termID="4">
        <Name xml:lang="en">hardOfHearingSubtitles</Name>
        <Definition xml:lang="en">A document used for producing subtitles (captions) intended primarily for the hard of hearing, rendered as text.</Definition>
        <FirstVersiondate>2015-09-11</FirstVersiondate>
        <ValidityFlag>1</ValidityFlag>
    </Term>

    <Term termID="5">
        <Name xml:lang="en">spokenSubtitles</Name>
        <Definition xml:lang="en">A document used for the voicing of translation subtitles as an alternative dialogue sound track intended primarily for the visually impaired.</Definition>
        <FirstVersiondate>2015-09-11</FirstVersiondate>
        <ValidityFlag>1</ValidityFlag>
    </Term>
</ClassificationScheme>